{
  "manifest_version": 2,

  "name": "Social Trade",
  "description": "Auto clicks",
  "version": "1.0",
  "options_page": "options.html",
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "content_scripts": [{
    "matches": ["*://*.socialtrade.biz/*"],
    "js": ["jquery.min.js", "content.js"]
  }],
  "browser_action": {
    "default_title": "Social Trade",
	"default_icon": "icon.png"
  },

  "permissions": ["activeTab", "storage"]
}
